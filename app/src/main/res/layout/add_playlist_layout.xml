<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/padding_24"
    android:paddingLeft="@dimen/padding_24"
    android:paddingRight="@dimen/padding_24"
    android:background="@drawable/boder_bg"
    android:orientation="vertical">

    <EditText
        android:id="@+id/edt_playlist_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_8"
        android:background="@drawable/boder_edt_bg"
        android:textSize="@dimen/textSize_24"
        android:textColor="@color/white"
        android:hint="Tên danh sách phát"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_16"
        android:layout_marginTop="@dimen/margin_16">

        <TextView
            android:id="@+id/action_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="Lưu"
            android:textColor="@color/white"
            android:textSize="@dimen/textSize_20"/>

        <TextView
            android:id="@+id/action_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="Hủy"
            android:textColor="@color/white"
            android:textSize="@dimen/textSize_20"/>
    </RelativeLayout>

</LinearLayout>